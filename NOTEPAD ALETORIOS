## INSTALANDO AMD GPU PARA MINING
 executar como root

sudo apt-get -y install ocl-icd-opencl-dev opencl-headers rocm-opencl-runtime

amdgpu-install --usecase=workstation,rocm,opencl --opencl=rocr,legacy --vulkan=pro --accept-eula

ou 

amdgpu-install --no-dkms --usecase=opencl
    

sudo sysctl -w vm.nr_hugepages=2048
sudo echo "* soft memlock 262144" >> /etc/security/limits.conf
sudo echo "* hard memlocl 262144" >> /etc/security/limits.conf



